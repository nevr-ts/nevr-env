{
  "name": "nevr-env",
  "version": "0.1.0",
  "private": true,
  "description": "The Environment Lifecycle Framework - Stop managing .env files, start managing your application lifecycle.",
  "repository": {
    "type": "git",
    "url": "https://github.com/nevr-ts/nevr-env"
  },
  "homepage": "https://nevr-ts.github.io/nevr-env/",
  "bugs": {
    "url": "https://github.com/nevr-ts/nevr-env/issues"
  },
  "license": "MIT",
  "author": "Yalelet Dessalegn",
  "type": "module",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "turbo test",
    "typecheck": "turbo typecheck",
    "clean": "turbo clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "changeset": "changeset",
    "release": "turbo build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.0",
    "prettier": "^3.8.1",
    "turbo": "^2.5.0",
    "typescript": "^5.7.0"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=18.0.0"
  }
}
