{
  "name": "@nevr-env/core",
  "version": "0.1.0",
  "description": "Type-safe environment validation with plugin system and Proxy pattern",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./standard": {
      "import": "./dist/standard.js",
      "types": "./dist/standard.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "arktype": "^2.1.0",
    "tsup": "^8.4.0",
    "typescript": "^5.7.0",
    "valibot": "^1.0.0",
    "vitest": "^4.0.18",
    "zod": "^3.24.0"
  },
  "peerDependencies": {
    "arktype": "^2.0.0",
    "valibot": "^0.30.0 || ^1.0.0",
    "zod": "^3.22.0"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": true
    },
    "valibot": {
      "optional": true
    },
    "arktype": {
      "optional": true
    }
  },
  "keywords": [
    "env",
    "environment",
    "validation",
    "type-safe",
    "typescript",
    "zod"
  ],
  "engines": {
    "node": ">=18"
  },
  "license": "MIT",
  "author": "Yalelet Dessalegn",
  "homepage": "https://nevr-ts.github.io/nevr-env/",
  "bugs": {
    "url": "https://github.com/nevr-ts/nevr-env/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nevr-ts/nevr-env",
    "directory": "packages/core"
  }
}
